<header class="py-3 mb-4 border-bottom shadow">
    <div class="container-fluid d-grid gap-3 align-items-center"
         style="grid-template-columns: 1fr 2fr;">
        <div class="row">
            <a href="{{ url_for('index')}}"
               class="d-flex align-items-center col-3 mb-2 mb-lg-0 link-dark text-decoration-none">
                <img class="logo"
                     alt="logo"
                     src="{{ url_for('static', filename='mango-tree.png') }}"
                     height="60"
                     style="margin: -10px 0;"/>
                {# <img class="logo"
      alt="logo"
      src="{{ url_for('static', filename='logo.svg') }}"
      width="137"
      style="margin: -10px 0;">#}
                {#  <span class="ml-3 fs-4"> &nbsp; FOZ-Data<span> #}
                {#<img src="{{ url_for('static', filename='vsc-combi.webp') }}"
     style="max-height: 50px">#}
            </a>
            <div class="col-6"></div>
        </div>
        <div class="d-flex align-items-center">
            <form class="w-100 me-3">
                <input type="search"
                       class="form-control"
                       placeholder="Search files ..."
                       disabled>
            </form>
            <div class="flex-shrink-0 dropdown">
                <a href="#"
                   class="d-block link-dark text-decoration-none dropdown-toggle"
                   id="dropdownUser"
                   data-bs-toggle="dropdown"
                   aria-expanded="false">
                    {{ g.irods_session.username }} <i class="bi bi-person-circle fs-4"></i>
                </a>
                <ul class="dropdown-menu text-small shadow"
                    aria-labelledby="dropdownUser">
                    <li>
                        <a class="dropdown-item disabled" href="#">Preferences</a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="{{ url_for('user_bp.my_profile')}}">My profile</a>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    {% if config['MANGO_AUTH'] == 'basic' %}
                        <li>
                            <a class="dropdown-item" href="{{ url_for('user_bp.logout_basic') }}">Sign out</a>
                        </li>
                    {% else %}
                        <li>
                            <a class="dropdown-item disabled" href="#">Sign out</a>
                        </li>
                    {% endif %}
                    <!--<li><a class="dropdown-item" href="#">Switch to admin</a></li>-->
                </ul>
            </div>
        </div>
    </div>
</header>
